<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterSelectOffline"
    android:layout_gravity="center"
    android:id="@+id/offlinePlaySelectScreen"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/charactersLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/transparantblue"
        >

        <ImageView
            android:id="@+id/p1Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pd"/>
        <ImageView
            android:id="@+id/vsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vs1"/>
        <ImageView
            android:id="@+id/p2Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/charactersSelectLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/transparantblue"
        >
        <LinearLayout
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/arrowL1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/arrow"
                />
            <ImageView
                android:id="@+id/p1Character"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pr"
                />
            <ImageView
                android:id="@+id/arrowR1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/arrow"
                android:rotationY="180"
                />
            </LinearLayout>

            <Button
                android:id="@+id/chooseP1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="select"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioButtonEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="easy"
                    android:textSize="15dp"
                    android:onClick="getButton"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/radioButtonMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="medium"
                    android:textSize="15dp"
                    android:onClick="getButton"
                    />
                <RadioButton
                    android:id="@+id/radioButtonHard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hard"
                    android:textSize="15dp"
                    android:onClick="getButton"
                    />
            </RadioGroup>



            <Button
            android:id="@+id/ready"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:enabled="false"
            android:text="ready"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrowL2"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arrow"
            />
        <ImageView
            android:id="@+id/p2Character"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pr"
            />
        <ImageView
            android:id="@+id/arrowR2"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arrow"
            android:rotationY="180"
            />
        </LinearLayout>
        <Button
            android:id="@+id/chooseP2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="select"/>
    </LinearLayout>
</LinearLayout>


</LinearLayout>